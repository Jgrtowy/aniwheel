{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "files": { "ignore": ["node_modules"] },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 320
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "rules": {
            "correctness": {
                "noUnusedImports": "off",
                "useExhaustiveDependencies": "off"
            },
            "style": {
                "useImportType": "warn"
            },
            "a11y": {
                "useKeyWithClickEvents": "off",
                "noSvgWithoutTitle": "off"
            },
            "suspicious": {
                "noArrayIndexKey": "off"
            }
        }
    }
}
